@page
@model TestProject.Web.Pages.Classes.EditModel
@{
    ViewData["Title"] = "Edit Class";
    Layout = "_MyLayout";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning">
                    <h4><i class="fas fa-edit"></i> Edit Class</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Class Name *</label>
                            <input type="text" class="form-control" asp-for="Input.Name" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" asp-for="Input.Description" rows="3"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">School Year *</label>
                            <input type="number" class="form-control" asp-for="Input.SchoolYear" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Max Students *</label>
                            <input type="number" class="form-control" asp-for="Input.MaxStudents" required>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Class
                            </button>
                            <a href="/Classes" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>