@page
@model TestProject.Web.Pages.Classes.AddStudentModel
@{
    ViewData["Title"] = "Add Student to Class";
    Layout = "_MyLayout";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4><i class="fas fa-user-plus"></i> Add Student to @Model.ClassName</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="ClassId" />
                        
                        <div class="mb-3">
                            <label class="form-label">Select Student *</label>
                            <select class="form-select" asp-for="StudentId" required>
                                <option value="">-- Choose Student --</option>
                                @foreach(var student in Model.AvailableStudents)
                                {
                                    <option value="@student.Id">@student.FullName - @student.Email</option>
                                }
                            </select>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-info">
                                @Model.Message
                            </div>
                        }
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Add to Class
                            </button>
                            <a href="/Classes/Students?classId=@Model.ClassId" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>