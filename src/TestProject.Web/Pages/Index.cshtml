@page
@model TestProject.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
    Layout = "_MyLayout";  // Dùng layout mới
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4">Welcome to My Website</h1>
        <p class="lead">The best place to find amazing products</p>
        <a href="/Products" class="btn btn-light btn-lg mt-3">
            <i class="fas fa-shopping-cart"></i> Shop Now
        </a>
    </div>
</section>

<!-- Features -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Our Features</h2>
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Fast Shipping</h5>
                        <p class="card-text">Quick delivery to your door.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Secure Payment</h5>
                        <p class="card-text">Your data is always safe.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <i class="fas fa-headset fa-3x text-info mb-3"></i>
                        <h5 class="card-title">24/7 Support</h5>
                        <p class="card-text">We're here to help anytime.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>