@page
@model TestProject.Web.Pages.StudentsModel
@{
    ViewData["Title"] = "Students Management";
    Layout = "_MyLayout";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-graduate"></i> Students Management</h1>
        <a href="/Students/Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Student
        </a>
    </div>
    
    @if (Model.Students.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No students found. Add your first student!
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Full Name</th>
                        <th>Date of Birth</th>
                        <th>Age</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for(int i = 0; i < Model.Students.Count; i++)
                    {
                        var student = Model.Students[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td><strong>@student.FullName</strong></td>
                            <td>@student.DateOfBirth.ToString("dd/MM/yyyy")</td>
                            <td>@student.Age years</td>
                            <td>@student.Email</td>
                            <td>@student.PhoneNumber</td>
                            <td>@student.Address</td>
                            <td>
                                <a href="/Students/Edit?id=@student.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@student.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" 
                                            onclick="return confirm('Delete this student?')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>